<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/drawer_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                tools:openDrawer="start">

    <RelativeLayout
            android:id="@+id/content"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <Button
                android:layout_alignParentStart="true"
                android:id="@+id/download_zip"
                android:textAllCaps="false"
                android:layout_width="wrap_content"
                android:text="Download Zip File"
                android:layout_height="wrap_content"/>

        <Button
                android:id="@+id/download_zip_use_streaming"
                android:textAllCaps="false"
                android:layout_width="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Download Zip File with RxJava"
                android:layout_height="wrap_content"/>

        <Button
                android:textAllCaps="false"
                android:id="@+id/download_zip_rxjava"
                android:layout_width="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="Download Zip-unZip File RxJava"
                android:layout_height="wrap_content"/>
    </RelativeLayout>

    <ProgressBar
            android:layout_below="@+id/content"
            android:visibility="gone"
            android:id="@+id/progressBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

</RelativeLayout>
